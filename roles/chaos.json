{
  "name": "chaos",
  "default_attributes": { 
    "postgresql": {
      "password": {
        "postgres": "choasdba"
      }
    }
  },
  "override_attributes": {
    "authorization": {
      "sudo": {
        "groups": ["sudo"],
        "include_sudoers_d": true
      }
    }, 
    "languages": {
      "ruby": {
        "default_version": "1.9.1"
      }
    },
    "gitolite": {
      "admin_home": "/srv/git"
    }
  },
  "json_class": "Chef::Role",
  "description": "Install Chaos stack.",
  "chef_type": "role",
  "run_list": [
    "recipe[sudo]", 
    "recipe[ruby]",
    "recipe[ruby::symlinks]",
    "recipe[nginx]",
    "recipe[postgresql::server]",
    "recipe[gitolite]",
    "recipe[chaos]"
   ]
}

